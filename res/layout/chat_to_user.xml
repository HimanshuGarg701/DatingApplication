<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/ToUserPic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"

            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MessageToUser" app:layout_constraintEnd_toStartOf="@+id/ToUserPic"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/ToUserPic"
            android:background="@drawable/rounded_corners"
            android:padding="12dp"
            android:maxWidth="240dp"/>
</android.support.constraint.ConstraintLayout>